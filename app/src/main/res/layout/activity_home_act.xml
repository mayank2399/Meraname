<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_act">

    <Button
        android:id="@+id/log_doc"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="296dp"
        android:layout_marginBottom="236dp"
        android:background="@drawable/log_doc"
        app:layout_constraintBottom_toTopOf="@+id/Admin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/loginpat"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="356dp"
        android:background="@drawable/log_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sign_user"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="440dp"
        android:background="@drawable/sign_doc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/signuser"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/log_doc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="106dp"
        android:text="Admin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/signuser"
        app:layout_constraintTop_toBottomOf="@+id/log_doc" />

</androidx.constraintlayout.widget.ConstraintLayout>
